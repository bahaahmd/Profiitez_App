<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/new_parent"
    android:layout_height="wrap_content"
android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="30dp"
    app:cardCornerRadius="15dp"
    android:elevation="20dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/parent_Relative"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            app:cardCornerRadius="15dp"
            android:id="@+id/image_produit">


            <ImageView
                android:id="@+id/image4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/star" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/AncienPrix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_produit"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/medium"
            android:text="7000 Da"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/NouveauPrix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_produit"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/AncienPrix"
            android:fontFamily="@font/medium"
            android:text="4000 Da"
            android:textColor="@color/gradient"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/durÃ©e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_produit"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/italic"
            android:text="Jusqu'au 25/03"
            android:textColor="@color/black"
            android:textSize="18sp" />





        <androidx.cardview.widget.CardView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:elevation="12dp"
            android:id="@+id/Image_Profile"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="150dp"
            android:layout_marginTop="10dp"

            android:layout_marginLeft="10dp"
            android:layout_below="@+id/NouveauPrix"
            >
            <ImageView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:id="@+id/PhotoProfile"
                android:src="@drawable/profile"
                android:scaleType="centerCrop"
                >
            </ImageView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/NouveauPrix"
            android:layout_marginStart="5dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/Image_Profile"
            android:fontFamily="@font/poppins_regular"
            android:text="Bahaa-Eddine"
            android:textColor="@color/black"
            android:textSize="16sp" />




    </RelativeLayout>


</androidx.cardview.widget.CardView>